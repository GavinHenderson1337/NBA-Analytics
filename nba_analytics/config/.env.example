# NBA Analytics Configuration File
# Copy this file to .env and fill in your actual values

# NBA API Configuration
NBA_API_BASE_URL=https://stats.nba.com/stats
NBA_API_TIMEOUT=30
NBA_API_RETRY_ATTEMPTS=3

# BigQuery Configuration
BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET_ID=nba_analytics
BIGQUERY_LOCATION=US
BIGQUERY_CREDENTIALS_PATH=config/service_account.json

# SQLMesh Configuration
SQLMESH_PROJECT_NAME=nba_analytics
SQLMESH_ENVIRONMENT=production
SQLMESH_SNAPSHOT_TTL=7d

# Data Processing Configuration
MIN_GAMES_PLAYED=10
MAX_MISSING_PERCENTAGE=0.1
OUTLIER_THRESHOLD=3.0

# Model Configuration
MODEL_RETRAIN_FREQUENCY=weekly
MODEL_VERSION=1.0
MODEL_ARTIFACTS_PATH=data/models

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/nba_analytics.log

# Development Configuration
DEBUG=False
TEST_MODE=False
SAMPLE_DATA_SIZE=1000
